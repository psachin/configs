[include]
	; user.name & user.email
	path = ~/.gitconfig.local
[core]
	abbrev = 12
	editor = emacsclient -nw
	excludesfile = ~/.gitignore_global

	; Don't trust file modes
	filemode = false

	deltaBaseCacheLimit = 1G
	ignorecase = true
[alias]
	a = add
	unstage = reset HEAD
	u = add -u
	co = checkout
	br = branch
	ci = commit
	st = status
	s = status -sb
	last = log --pretty=format:\"%h - %an, %ar : %s\"
	logg = log -p -l 2
	logs = log --stat
	df = diff
	dc = diff --cached
        lg = log -p
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        ls = ls-files
	ign = ls-files -o -i --exclude-standard
[color]
	ui = true
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[color "diff"]
        whitespace = red reverse
[pretty]
	fixes = Fixes: %h (\"%s\")
[commit]
	template = ~/.gitmessage.txt
[http]
	postBuffer = 524288000
	; proxy = http://10.101.11.108:3128
[push]
	default = matching
[help]
	autocorrect = 1
[log]
	date = relative
[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser = iclcoolster@gmail.com
	smtpServerPort = 587
	suppresscc = self